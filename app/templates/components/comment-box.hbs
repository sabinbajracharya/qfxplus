
<div class="row">
         <div class="col-md-8 {{if isLoggedIn 'commentbox-show' 'commentbox-hide'}}">
            <div class="panel panel-white post panel-shadow">
                <div class="post-heading">
                    <div class="pull-left image">
                        <img src="{{user.photoURL}}" class="img-circle avatar" alt="user profile image">
                    </div>
                    <div class="pull-left meta">
                        <div class="title h5">
                            <a href="#"><b>{{user.displayName}}</b></a>
                        </div>
                        <h6 class="text-muted time">Leave a comment below</h6>
                    </div>
                    <div class="pull-right post-comment">
                        <button class="waves-effect waves-light btn" {{action 'onPostComment' movieId user}}>Post</button>
                    </div>
                </div> 
                <div class="post-description material-comment"> 
                    {{textarea class="txt-comment" value=comment}}
                </div>
            </div>
        </div>

        <div class="row {{if isLoggedIn 'commentbox-hide' 'commentbox-show'}}">
            <div class="col-md-8">
                <div class="card-panel teal comment-login">
                    <a class="white-text" {{action 'login'}}>
                        Want to comment? Just Login with Facebook.
                    </a>
                </div>
            </div>
        </div>


<!-- comment box ends -->
    {{#each commentsList as |value|}}
        <div class="col-md-8">
            <div class="panel panel-white post panel-shadow">
                <div class="post-heading">
                    <div class="pull-left image">
                        <!-- <img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">-->
                        <img src="{{value.photoURL}}" class="img-circle avatar" alt="user profile image">
                    </div>
                    <div class="pull-left meta">
                        <div class="title h5">
                            <a href="#"><b>{{value.name}}</b></a>
                            made a comment.
                        </div>
                        <h6 class="text-muted time">{{value.timeago}}</h6>
                    </div>
                </div> 
                <div class="post-description"> 
                    <p>{{value.message}}</p>
                    <!-- <div class="stats">
                            <a href="#" class="btn btn-default stat-item">
                                <i class="fa fa-thumbs-up icon"></i>2
                            </a>
                            <a href="#" class="btn btn-default stat-item">
                                <i class="fa fa-thumbs-down icon"></i>12
                            </a>
                        </div>
                    -->
                </div>
            </div>
        </div>
    {{/each}}
</div>

{{yield}}
